#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    int n;cin>>n;
    ll a[n];
    for(int i=0;i<n;i++) cin>>a[i];
    multiset<ll> s;
    ll ans=0;
    for(int i=0;i<n;i++)
    {
        if(a[i]>=0 || a[i]+ans>=0)
        {
            ans+=a[i];
            s.insert(a[i]);
            continue;
        }
        if(s.size()==0) continue;
        ll k=*s.begin();
        if(a[i]>k)
        {
            ans+=a[i];
            ans-=k;
            s.erase(s.begin());
            s.insert(a[i]);
        }
    }
    cout<<s.size();
    return 0;
}
