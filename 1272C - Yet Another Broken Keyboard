#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{        
    ios::sync_with_stdio(false); 
    int l,q;
    cin>>l>>q;
    string s;cin>>s;
    map<char,bool> mp;
    while(q--)
    {
        char c;
        cin>>c;
        mp[c]=true;
    }
    ll j=0;
    ll ans=0;
    for(int i=0;i<l;i++)
    {
        while(mp[s[i]]==true)
        {
            j++;
            i++;
            if(i>=l) break;
        }
        //cout<<j<<" ";
        ans+=(j*(j+1))/2;
        j=0;
    }
    cout<<ans<<"\n";
}
