#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{        
    ios::sync_with_stdio(false); 
    int l,q;
    cin>>l>>q;
    string s;cin>>s;
    int f[l+1][26]={{0}};
    for(int i=0;i<l;i++)
    {
        for(int j=0;j<26;j++)
        {
            f[i+1][j]=f[i][j];
        }
        f[i+1][s[i]-'a']=f[i][s[i]-'a']+1;
    }
    while(q--)
    {
        int a,b;cin>>a>>b;
        ll ans=0;
        for(int i=0;i<26;i++)
        {
            // if(f[b][i]!=0)
            // {
            //     cout<<f[a-1][i]<<" "<<f[b][i]<<endl;
            // }
            ans+=(f[b][i] - f[a-1][i])*(i+1);
        }
        cout<<ans<<"\n";
    }
}
