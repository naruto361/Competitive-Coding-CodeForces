#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    int t;cin>>t;
    while(t--)
    {
        int n;cin>>n;
        vector<int> a(n,0);
        for(int i=0;i<n;i++) {int x;cin>>x;a[i]=x;}
        bool desc=true,asc=true;
        for(int i=1;i<n;i++)
        {
            if(a[i]<a[i-1]) asc=false;
            else if(a[i]>a[i-1]) desc=false;
        }
        if(asc) {cout<<0<<"\n";continue;}
        else if(desc) {cout<<3<<"\n";continue;}
        if(a[0]==1 || a[n-1]==n) cout<<1;
        else if(a[0]==n && a[n-1]==1) cout<<3;
        else cout<<2;
        cout<<endl;
    }
    return 0;
}
