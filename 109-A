#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    int n;cin>>n;
    if(n<4) 
    {
        cout<<-1;return 0;
    }
    else if(n==4 || n==7)
    {
    cout<<n;return 0;
    }
    int dp[n+1]={0};
    dp[4]=1;dp[7]=1;
    for(int i=8;i<=n;i++)
    {
        dp[i]+=dp[i-4] + dp[i-7];
    }
    if(dp[n]==0)
    {
        cout<<-1;return 0;
    }
    string s;
    int ans=0,idx=0;
    int maxi=0;
    int d=n/7;
    d=d*7;
    while(d>0) {if(d%7==0 && (n-d)%4==0) {maxi=d;break;} d-=7;}
    for(int i=maxi;i<n;i+=4) s+='4';
    for(int i=1;i<=maxi;i+=7) s+='7';
    cout<<s;
    return 0;
}
