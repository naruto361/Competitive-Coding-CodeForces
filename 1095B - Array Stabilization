#include<bits/stdc++.h>
using namespace std;
#define ll long long
void solve(vector<int> &a)
{
    sort(a.begin(),a.end());
    if(a.size()==2) {cout<<0;return ;}
    int l=a[1]-a[0];
    int r=a[a.size()-1]-a[a.size()-2];
    if(l>r) cout<<a[a.size()-1]-a[1];
    else cout<<a[a.size()-2]-a[0];
    return;
}
int main()
{
    int t;t=1;//cin>>t;
    while(t--){
        int n;cin>>n;
        vector<int> a(n,0);
        for(int i=0;i<n;i++) {int x;cin>>x;a[i]=x;}
        solve(a);
        cout<<"\n";
    }
}
