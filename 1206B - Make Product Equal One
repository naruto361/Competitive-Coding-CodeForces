#include <bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
    int n;cin>>n;
    ll a[n];
    int neg=0;
    for(int i=0;i<n;i++) cin>>a[i];
    ll diff=0;
    int zero=0;
    for(int i=0;i<n;i++)
    {
        if(a[i]==0) diff+=1,zero++;
        else if(a[i]>0) diff+=a[i]-1;
        else diff+=-a[i]-1,neg++;
    }
    if(neg%2==0) cout<<diff;
    else if(neg&1 && zero>0) cout<<diff;
    else cout<<diff+2;
    return 0;
}
